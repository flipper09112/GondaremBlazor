
<div class="d-inline-flex p-2">

    <div class="@ButtonType.ToString() @(IsDisabled ? "ButtonDisabled" : "")" onclick="@Tapped">

        <div class="d-flex justify-content-center">

            @if (!string.IsNullOrEmpty(LeftIcon))
            {
                <img class="btn-left-icon" src="_content/GondaremBlazor.Components/Resources/Images/@LeftIcon" height="24" width="24" />
            }

            <div class="TextStyle noselect">

                @ButtonType.ToString()

            </div>
            
            @if (!string.IsNullOrEmpty(RightIcon))
            {
                <img class="btn-right-icon" src="_content/GondaremBlazor.Components/Resources/Images/@RightIcon" height="24" width="24" />
            }

        </div>

    </div>

</div>

<style>
    :root {
        --primary: #F8D247;
        --primary-dark: #E0B827;
        --secondary: #274FF5;
        --secondary-dark: #1A38B2;
        --tertiary: #F87147;
        --tertiary-dark: #E75527;
        --base-tertiary-light: #FFFFFF;
        --base-tertiary: #EDEEF1;
    }

    .noselect {
        -webkit-touch-callout: none; /* iOS Safari */
        -webkit-user-select: none; /* Safari */
        -khtml-user-select: none; /* Konqueror HTML */
        -moz-user-select: none; /* Old versions of Firefox */
        -ms-user-select: none; /* Internet Explorer/Edge */
        user-select: none; /* Non-prefixed version, currently
                                          supported by Chrome, Edge, Opera and Firefox */
    }

    .ButtonPrimary, .ButtonSecondary, .ButtonTertiary {
        background-color: var(--primary);
        height: 48px;
        border: none;
        border-radius: 24px;
        color: var(--base-tertiary-light);
        padding: 12px 32px;
    }

    .ButtonPrimaryMedium, .ButtonSecondaryMedium, .ButtonTertiaryMedium {
        background-color: var(--primary);
        height: 40px;
        border: none;
        border-radius: 20px;
        color: var(--base-tertiary-light);
        padding: 8px 24px;
    }

    .ButtonPrimarySmall, .ButtonSecondarySmall, .ButtonTertiarySmall {
        background-color: var(--primary);
        height: 32px;
        border: none;
        border-radius: 16px;
        color: var(--base-tertiary-light);
        padding: 4px 16px;
    }

    .ButtonSecondary, .ButtonSecondaryMedium, .ButtonSecondarySmall {
        background-color: var(--secondary);
    }

    .ButtonTertiary, .ButtonTertiaryMedium, .ButtonTertiarySmall {
        background-color: var(--tertiary);
    }

    .TextStyle {
        text-align: center;
        font-size: 16px;
    }
    
    .ButtonPrimary:active, .ButtonPrimaryMedium:active, .ButtonPrimarySmall:active {
        background-color: var(--primary-dark);
    }

    .ButtonSecondary:active, .ButtonSecondaryMedium:active, .ButtonSecondarySmall:active {
        background-color: var(--secondary-dark);
    }

    .ButtonTertiary:active, .ButtonTertiaryMedium:active, .ButtonTertiarySmall:active {
        background-color: var(--tertiary-dark);
    }

    .ButtonDisabled {
        pointer-events: none;
        background-color: var(--base-tertiary);
    }

    .btn-left-icon{
        padding: 0px 0;
        margin-right: 12px;
        align-content: center;
    }

    .btn-right-icon {
        padding: 0px 0;
        margin-left: 12px;
        align-content: center;
    }

</style>

@code {
    [Parameter]
    public string LeftIcon { get; set; } = string.Empty;

    [Parameter]
    public string RightIcon { get; set; } = string.Empty;

    [Parameter]
    public bool IsDisabled { get; set; }

    [Parameter]
    public Action Tapped { get; set; }

    [Parameter]
    public ButtonTypeEnum ButtonType { get; set; } = ButtonTypeEnum.ButtonPrimary;

    public enum ButtonTypeEnum
    {
        ButtonSecondary,
        ButtonPrimary,
        ButtonTertiary,
        ButtonSecondaryMedium,
        ButtonPrimaryMedium,
        ButtonTertiaryMedium,
        ButtonSecondarySmall,
        ButtonPrimarySmall,
        ButtonTertiarySmall
    }
}
